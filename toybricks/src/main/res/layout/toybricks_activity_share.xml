<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:layout_margin="0dp" >
    <ImageView
        android:id="@+id/toybricks_screenshot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@null" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#b0000000"
        android:orientation="horizontal"
        android:weightSum="1" >

        <ImageView
            android:id="@+id/toybricks_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:src="@drawable/toybricks_back" />

        <ImageView
            android:id="@+id/toybricks_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:src="@drawable/toybricks_savephoto" />

        <ImageView
            android:id="@+id/toybricks_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:src="@drawable/toybricks_share" />
    </LinearLayout>

    <ImageView
        android:id="@+id/toybricks_refresh"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:src="@drawable/toybricks_share_refresh"/>

</FrameLayout>